# Fastfile for IoTCoreSample
#
# This file configures Fastlane lanes for building and deploying the Sample App.
#
# Usage:
#   fastlane build_test        # Build for simulator (no signing)
#   fastlane build_sample      # Build signed IPA for distribution
#   fastlane release_testflight # Build and upload to TestFlight
#
# Required Environment Variables (for TestFlight):
#   APPLE_ID              - Apple Developer email
#   TEAM_ID               - Apple Developer Team ID
#
# NOTE: IOTCORE_APP_KEY/SECRET are NOT needed for builds.
#       Users configure their own SDK credentials in the app's Settings screen.
#

default_platform(:ios)

platform :ios do

  # ============================================
  # Build Lanes
  # ============================================

  desc "Build Sample App for simulator (no code signing)"
  lane :build_test do
    build_app(
      project: "IoTCoreSample.xcodeproj",
      scheme: "IoTCoreSample",
      configuration: "Debug",
      skip_codesigning: true,
      skip_archive: true,
      destination: "generic/platform=iOS Simulator"
    )
  end

  desc "Build signed IPA for App Store / TestFlight"
  lane :build_sample do
    # Increment build number using timestamp for uniqueness
    build_number = Time.now.strftime("%Y%m%d%H%M")
    increment_build_number(
      build_number: build_number,
      xcodeproj: "IoTCoreSample.xcodeproj"
    )

    # Auto-fetch or create distribution certificate
    get_certificates(
      development: false,
      team_id: ENV["TEAM_ID"]
    )

    # Auto-fetch or create provisioning profile
    get_provisioning_profile(
      app_identifier: "rogo.iot.core",
      team_id: ENV["TEAM_ID"]
    )

    # Enable automatic code signing
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "IoTCoreSample.xcodeproj",
      team_id: ENV["TEAM_ID"]
    )

    build_app(
      project: "IoTCoreSample.xcodeproj",
      scheme: "IoTCoreSample",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "IoTCoreSample.ipa",
      export_options: {
        signingStyle: "automatic",
        teamID: ENV["TEAM_ID"]
      }
    )
  end

  # ============================================
  # Deploy Lanes
  # ============================================

  desc "Build and upload to TestFlight"
  lane :release_testflight do
    # Build the app
    build_sample

    # Get release notes from environment or use default
    changelog = ENV["RELEASE_NOTES"] || "New build from CI"

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      changelog: changelog,
      distribute_external: false
    )

    # Clean up build artifacts
    clean_build_artifacts
  end

  # ============================================
  # Utility Lanes
  # ============================================

  desc "Run tests"
  lane :test do
    scan(
      project: "IoTCoreSample.xcodeproj",
      scheme: "IoTCoreSample",
      devices: ["iPhone 15 Pro"],
      clean: true
    )
  end

  desc "Increment version number"
  lane :bump_version do |options|
    type = options[:type] || "patch"
    increment_version_number(
      bump_type: type,
      xcodeproj: "IoTCoreSample.xcodeproj"
    )
  end

  # ============================================
  # Error Handling
  # ============================================

  error do |lane, exception|
    UI.error("Lane #{lane} failed with error: #{exception.message}")
  end

end
