# App Bundle Identifier
app_identifier("rogo.iot.core")

# Apple Developer Account (from environment variable)
apple_id(ENV["APPLE_ID"])

# Team ID for Apple Developer Portal
team_id(ENV["TEAM_ID"])

# App Store Connect Team ID (usually same as team_id)
itc_team_id(ENV["TEAM_ID"])

